---
import Voidgg from "./cards/voidgg.astro";
import Freelance from "./cards/freelance.astro";
import Nx from "./cards/nx.astro";
import Epidata from "./cards/epidata.astro";
import Baufest from "./cards/baufest.astro";
---

<div class="timeline">
  <Voidgg />
  <Freelance />
  <Nx />
  <Epidata />
  <Baufest />

  <style is:global>
    .tooltip {
      position: relative;
      display: inline-block;
      cursor: help;
    }

    .tooltip .tooltiptext {
      visibility: hidden;
      width: fit-content;
      max-width: 300px;
      word-break: keep-all;
      padding: 4px 8px;
      background-color: #0b1421;
      color: #fff;
      text-align: center;
      border-radius: 6px;
      position: absolute;
      margin-top: -32px;
      z-index: 1;
    }

    .tooltip:hover .tooltiptext {
      visibility: visible;
    }

    .timeline {
      position: relative;
      margin: 0 auto;
    }

    .timeline::after {
      content: "";
      position: absolute;
      width: 6px;
      background-color: white;
      top: 0;
      bottom: 0;
      left: 50%;
      margin-left: -3px;
    }

    .timeline-container__left {
      padding: 10px 40px;
      position: relative;
      background-color: inherit;
      width: 50%;
      left: 0;
    }
    .timeline-container__right {
      padding: 10px 40px;
      position: relative;
      background-color: inherit;
      width: 50%;
      left: 50%;
    }

    .timeline-container__left::before {
      content: " ";
      height: 0;
      position: absolute;
      top: 22px;
      width: 0;
      z-index: 1;
      right: 30px;
      border: medium solid #1f3a5f;
      border-width: 10px 0 10px 10px;
      border-color: transparent transparent transparent #1f3a5f;
    }

    .timeline-container__right::before {
      content: " ";
      height: 0;
      position: absolute;
      top: 22px;
      width: 0;
      z-index: 1;
      left: 30px;
      border: medium solid #1f3a5f;
      border-width: 10px 10px 10px 0;
      border-color: transparent #1f3a5f transparent transparent;
    }

    .timeline-container__left::after,
    .timeline-container__right::after {
      content: "";
      position: absolute;
      width: 24px;
      height: 24px;
      right: -13px;
      background-color: white;
      border: 3px solid #3768ab;
      top: 19px;
      border-radius: 50%;
      z-index: 1;
    }

    .timeline-container__right::after {
      left: -11px;
    }

    .timeline-content {
      color: white;
      padding: 20px 30px;
      background-color: #1f3a5f;
      position: relative;
      border-radius: 6px;
    }
    @media screen and (max-width: 960px) {
      .timeline::after {
        left: 31px !important;
      }

      .timeline-container__left,
      .timeline-container__right {
        width: 100% !important;
        padding-left: 70px !important;
        padding-right: 0 !important;
      }

      .timeline-container__left::before,
      .timeline-container__right::before {
        left: 60px !important;
        border: medium solid #1f3a5f !important;
        border-width: 10px 10px 10px 0 !important;
        border-color: transparent #1f3a5f transparent transparent !important;
      }

      .timeline-container__left::after,
      .timeline-container__right::after {
        left: 19px !important;
      }

      .timeline-container__right {
        margin-top: 24px !important;
        left: 0% !important;
      }

      .timeline-container__left:not(:first-of-type) {
        margin-top: 24px !important;
      }
    }
  </style>
</div>
