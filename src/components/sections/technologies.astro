import BackEnd from "../technologies/back-end.astro";
import Databases from "../technologies/databases.astro";
import DevOps from "../technologies/dev-ops.astro";
import Other from "../technologies/other.astro";
import VersionControl from "../technologies/version-control.astro";
---

<section
  id="technologies"
  class="w-full px-[5%] md:px-[15%] pt-16 min-h-[100vh]"
>
  <h3 class="text-white text-3xl font-bold">Technologies</h3>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 mt-8">
    <FrontEnd />
    <BackEnd />
    <DevOps />
    <Databases />
    <Other />
    <VersionControl />
  </div>
</section>
