---
import Form from "../form/form.astro";
---

<section class="w-full px-[5%] md:px-[15%] py-16 flex flex-col" id="contact">
  <h3 class="text-white text-3xl font-bold">Contact</h3>
  <div class="flex flex-col md:flex-row md:gap-4 justify-center items-center md:items-start">
    <div
      class="md:w-14 md:h-fit flex mt-4 flex-wrap w-fit px-2 justify-center gap-4 bg-[#152841] py-2 rounded-lg border-[1px] border-main-border items-center"
    >
      <a href="https://www.linkedin.com/in/luca-smigoski/" target="_blank">
        <img
          src="https://ddw0jzv6yetk6.cloudfront.net/linkedin.png"
          width="30"
          alt="Linkedin Icon"
        />
      </a>
      <a href="https://github.com/4nything" target="_blank">
        <img
          src="https://ddw0jzv6yetk6.cloudfront.net/github.png"
          width="30"
          alt="Github Icon"
        />
      </a>
      <a href="https://instagram.com/smigoski" target="_blank">
        <img
          src="https://ddw0jzv6yetk6.cloudfront.net/instagram.webp"
          width="30"
          alt="Github Icon"
        />
